<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_product_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
    android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.hammersmith.ku.coffeecorner.ProductDetail"
    android:weightSum="1">

    <LinearLayout
        android:background="@color/white"
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:background="@color/white"
            android:paddingLeft="0dp"
            android:layout_width="70dp"
            android:src="@drawable/heart"
            android:layout_height="wrap_content" />

        <TextView
            android:text=""
            android:paddingRight="20dp"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priceDetail"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout

        android:paddingTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <com.hammersmith.ku.coffeecorner.RoundedImageView
            android:id="@+id/imageProductDetail"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/foottwojpg"
            app:border_width="0dip"
            app:is_oval="true"
            app:round_background="true" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="303dp"
            android:id="@+id/descriptionDetail"
            android:textAlignment="center"
            android:text=""
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:text="Quantity"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
  android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/amount">
        <Button
            android:id="@+id/decrease"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="-"
            android:textColor="@color/light"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/plus_button"
            android:elevation="8dp"

            />
        <TextView
            android:layout_width="64dp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/orderAmount"
            android:textStyle="normal|bold" />
        <Button
            android:id="@+id/increase"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="+"
            android:textColor="@color/light"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/plus_button"
            android:elevation="8dp"

            />

    </LinearLayout>
<LinearLayout
    android:paddingTop="10dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:layout_width="303dp"
        android:text="Order Now"
        android:layout_height="wrap_content"
        android:id="@+id/btn_order"
        android:textColor="@color/light"
        android:background="@drawable/roundedbutton"
        android:textStyle="normal|bold"
        android:textSize="18sp" />
</LinearLayout>
</LinearLayout>
